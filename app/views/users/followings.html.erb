<div class="row">
  
  <aside class="col-xs-4">
    <section class="user-info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  
  <div class="col-xs-8">
    <h3>Followings (<%= @user.following_users.count %>)</h3>
    <% @users.each do |u| %>
      <div class="media">
        <div class="media-left">
          <%= gravatar_for u %>
        </div>
        <div class="media-body">
          <h3><%= link_to u.name, u %></h3>
        </div>
      </div>
      <hr>
    <% end %>
  </div>
</div>